{% extends "base.njk" %}

{% block titulo %}Paciente | Nuevo{% endblock %}

{% block contenido %}

    <h1>Inserción de un nuevo paciente</h1>

    <form action="/patients" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label>Usuario:
                <input type="text" class="form-control" name="usuario">
            </label>
            {% if errores.login %}
                <p class="text-danger">{{ errores.login }}</p>
            {% endif %}
        </div><br>
        <div class="form-group">
            <label>Contraseña:
                <input type="password" class="form-control" name="contrasena">
            </label>
            {% if errores.password %}
                <p class="text-danger">{{ errores.password }}</p>
            {% endif %}
        </div><br>
        <div class="form-group">
            <label>Nombre:
                <input type="text" class="form-control" name="nombre">
            </label>
            {% if errores.name %}
                <p class="text-danger">{{ errores.name }}</p>
            {% endif %}
        </div><br>
        <div class="form-group">
            <label>Apellido:
                <input type="text" class="form-control" name="apellido">
            </label>
            {% if errores.surname %}
                <p class="text-danger">{{ errores.surname }}</p>
            {% endif %}
        </div><br>
        <div class="form-group">
            <label>Fecha de nacimiento:
                <input type="date" class="form-control" name="fecha">
            </label>
            {% if errores.birthDate %}
                <p class="text-danger">{{ errores.birthDate }}</p>
            {% endif %}
        </div><br>
        <div class="form-group">
            <label>Dirección:
                <input type="text" class="form-control" name="direccion">
            </label>
            {% if errores.address %}
                <p class="text-danger">{{ errores.address }}</p>
            {% endif %}
        </div><br>
        <div class="form-group">
            <label>Número del seguro:
                <input type="text" class="form-control" name="seguro">
            </label>
            {% if errores.insuranceNumber %}
                <p class="text-danger">{{ errores.insuranceNumber }}</p>
            {% endif %}
        </div><br>
        <div class="form-group">
            <label>Foto de perfil:
                <input type="file" class="form-control" name="imagen">
            </label>
        </div><br>
        <button type="submit" class="btn btn-primary">
            Enviar
        </button><br><br>
    </form>

{% endblock %}