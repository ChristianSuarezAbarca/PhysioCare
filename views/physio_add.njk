{% extends "base.njk" %}

{% block titulo %}Physio | Nuevo{% endblock %}

{% block contenido %}

    <h1>Inserción de un nuevo físio</h1>

    <form action="/physios" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label>Usuario:
                <input type="text" class="form-control" name="usuario">
            </label>
            {% if errores.login %}
                <p class="text-danger">{{ errores.login }}</p>
            {% endif %}
        </div><br>
        <div class="form-group">
            <label>Contraseña:
                <input type="password" class="form-control" name="contrasena">
            </label>
            {% if errores.password %}
                <p class="text-danger">{{ errores.password }}</p>
            {% endif %}
        </div><br>
        <div class="form-group">
            <label>Nombre:
                <input type="text" class="form-control" name="nombre">
            </label>
            {% if errores.name %}
                <p class="text-danger">{{ errores.name }}</p>
            {% endif %}
        </div><br>
        <div class="form-group">
            <label>Apellido:
                <input type="text" class="form-control" name="apellido">
            </label>
            {% if errores.surname %}
                <p class="text-danger">{{ errores.surname }}</p>
            {% endif %}
        </div><br>
        <div class="form-group">
            <label for="especialidad">Especialidad:</label>
            <select class="form-control" name="especialidad" id="especialidad">
                <option value="Sports">Sports</option>
                <option value="Neurological">Neurological</option>
                <option value="Pediatric">Pediatric</option>
                <option value="Geriatric">Geriatric</option>
                <option value="Oncological">Oncological</option>
            </select>
            {% if errores.specialty %}
                <p class="text-danger">{{ errores.specialty }}</p>
            {% endif %}
        </div><br>
        <div class="form-group">
            <label>Número de licencia:
                <input type="text" class="form-control" name="licencia">
            </label>
            {% if errores.licenseNumber %}
                <p class="text-danger">{{ errores.licenseNumber }}</p>
            {% endif %}
        </div><br>
        <div class="form-group">
            <label>Foto de perfil:
                <input type="file" class="form-control" name="imagen">
            </label>
        </div><br>
        <button type="submit" class="btn btn-primary">
            Enviar
        </button><br><br>
    </form>

{% endblock %}